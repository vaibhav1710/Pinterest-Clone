<% include ./partials/header.ejs  %>

<div class="w-full min-h-screen p-6 bg-zinc-900">
<div class="max-w-2xl mx-auto  p-6 bg-white shadow-md rounded-md">
    <div class="relative h-[50vh] mb-6 ">
      <img class="w-full h-full bg-zinc-700 object-cover rounded-md" src="<%= post.imageUrl %>" alt="Post Image">
    </div>
    <h1 class="text-2xl font-bold mb-2"><%= post?.title %></h1>
    <p class="text-gray-600 mb-4"><%= post?.description %></p>
    <div class="flex items-center mb-4">
        <span class="text-gray-500">Tags : </span>
        <div class="flex flex-wrap items-center">
          <% post.tags.split(' ').forEach(tag => { %>
            <span class="inline-block bg-red-700 text-white py-1 px-2 rounded-full text-xs uppercase mr-2"> #<%= tag.trim() %></span>
          <% }); %>
        </div>
      </div>
      <div class="flex justify-between items-center">
        <p class="text-gray-500">Uploaded by @<%= post.user.username %></p>
      <div class="flex justify-center items-center">
        <button class="bg-red-700 text-white py-2 px-4 rounded-full">Save</button>
        <% if(user._id == post.user.id) {%>
        <!-- <a class="delete-icon" href="/post/delete/<%=post._id%>"> <i class="ri-delete-bin-fill text-black p-2"></i> </a> -->
        <form action="/delete/<%=post._id%>?_method=delete" method="POST">
            <button class="py-2 px-4 m-2 bg-red-700 text-white rounded-full">Delete</button>
        </form>
        <%}%>
      </div>
      </div>
    <!-- Add more details or actions as needed -->
  </div>
</div>

<script>

</script>
  

<% include ./partials/footer.ejs  %>