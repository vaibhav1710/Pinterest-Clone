<% include ./partials/header.ejs  %>
 
<div class="w-full min-h-screen text-white bg-zinc-800 px-10 py-8">
    <div class="cards flex flex-wrap gap-10">
      <% posts.forEach(function(elem){ %>
        <div class="w-32 card">
        <a href="/post/<%= elem._id %>">
            <div class=" w-full h-40 rounded-lg overflow-hidden bg-zinc-700">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="">
            </div>
        </a>
            <h5 class="mt-2 text-sm"><%= elem.title %></h5>
            <h6 class="text-xs font-semibold opacity-500">@<%= elem.user.username%> </h6>
        </div>
       <%})%> 
    </div>
</div>

<% include ./partials/footer.ejs  %>