<% include ./partials/header.ejs  %>
  <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
     <h1 class="text-xl"> Create a new Pin</h1>
      <hr class="opacity-10 mt-3">
      <form action="/createboardpin/<%=board._id%>" method="POST" enctype="multipart/form-data">
        <input class=" block w-1/3 px-3 py-2 " type="file" name="postimage" >
        <input class="text-black block w-1/3 px-3 py-2 mt-2 border-2 rounded-md" type="text" placeholder="Title" name="title">
        <input class="text-black block w-1/3 px-3 py-2 mt-2 border-2 rounded-md" type="text" placeholder="tags" name="tags">
        <textarea class="text-black block w-1/3 h-60 px-3 py-2 mt-2 border-2 rounded-md" type="text" placeholder="Description" name="description"></textarea>
        <input class=" block w-1/3 px-3 py-2 mt-2 bg-red-700  rounded-full" type="submit" value="Create Post">
      </form>
  </div>
